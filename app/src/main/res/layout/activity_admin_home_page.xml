<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminHomePage">

    <TextView
        android:id="@+id/textAdmin"
        android:layout_width="218dp"
        android:layout_height="84dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="52dp"
        android:text="Admin Panel"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMngSite"
        android:layout_width="254dp"
        android:layout_height="86dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#4CAF50"
        android:onClick="onClicking"
        android:text="Manage Sites"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAdmin" />

    <Button
        android:id="@+id/btnMngRevenue"
        android:layout_width="254dp"
        android:layout_height="86dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="316dp"
        android:backgroundTint="#2196F3"
        android:onClick="onClicking"
        android:text="Revenue management"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAdmin" />

    <Button
        android:id="@+id/btnMngSecGuard"
        android:layout_width="254dp"
        android:layout_height="86dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="184dp"
        android:backgroundTint="#3F51B5"
        android:onClick="onClicking"
        android:text="Manage Security Guards"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>